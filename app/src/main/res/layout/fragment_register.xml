<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.RegisterFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtNomeUserLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNomeUser"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="Nome"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtCpfRegisterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCpfRegister"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="CPF"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtTelefoneRegisterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtTelefoneRegister"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="Telefone"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtEmailRegisterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmailRegister"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="E-mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtEnderecoRegisterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEnderecoRegister"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="EndereÃ§o"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtSenhaRegisterLayout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtSenhaRegister"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorWhite"
            android:hint="Senha"
            android:imeOptions="actionDone"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:password="true"
            android:shadowColor="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textColorLink="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_radius"
        android:text="CADASTRAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:typeface="monospace"
        app:fontFamily="@font/lato_bold"/>

</LinearLayout>